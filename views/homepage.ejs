<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Homepage</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
</head>
<body>

    <div class="container">
        <div class="row mt-5">
            <!--Block of buttons-->
            <div class="col-sm-12 text-right">
                <button type="button" id="add-note" class="btn btn-primary btn-lg font-weight-bold m-2 p-3">+ Add Notes</button>
                <button type="button" id="add-list" class="btn btn-warning btn-lg font-weight-bold text-secondary m-2 p-3">To-Do List</button>
            </div>
        </div>

        <div class="row mt-5 align-items-baseline" id="notesList">
            <!--List of notes-->
            <% tmpArray.forEach(note => { %>
                <div class="col-4 col-sm-4 mt-5" data-id="<%= note._id %>" data-type="<%= note._type %>">
                    <div class="card">
                        <div class="card-body note-item">
                            <div class="float-right">
                                <button type="button" class="btn btn-danger" data-id="<%= note._id %>">x</button>
                            </div>
                            <h5 class="card-title font-weight-bold mt-3 h4"><%= note.title %></h5>
                            <% if (note.inputs) { %>
                                <% note.inputs.forEach(input => { %>
                                    <p class="card-text font-italic text-secondary mt-3 h4"><%= input.text %></p>
                                <% }) %>
                            <% } else { %>
                                <p class="card-text font-italic text-secondary mt-3 h4"><%= note.text %></p>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
            <!--List of notes-->
        </div>

    </div>

    <script src="js/index.js"></script>
</body>
</html>